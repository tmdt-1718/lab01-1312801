
  <div class="row">
    <div class="ccol-9 col-sm-10 col-md-10 col-lg-11 col-xl-11">
<% if logged_in?%>
<h1>Blogs</h1>
      <%= @blogs.count  %> blogs
      <% @blogs.each do |b| %>

      <div class="card" >
    <div class="card-body">
      <a class="card-title"><%= b.title %></a>
      <h6 class="card-subtitle mb-2 text-muted"><%=current_user[:name] %></h6>
      <p class="card-text"><%= b.body %></p>
      <a href="<%= blog_path(b) %>" class="card-link">Show</a>
      <a href="#" class="card-link">Edit</a>
    <a href="#" class="card-link">Delete</a></br>
      <a><%= link_to "Create a New Article", new_blog_path, class: "new_article" %></a>
    </div>
  </div>
  <% end %>
      <% else %>

      <div class="center jumbotron">
<div class="container">

        <h1>Blog!</h1>

        <h2> Write your first blog </h2>
        <h4>U haven't signed in yet</h4>

       <%= link_to "Sign in", '/login', class: "btn btn-lg btn-primary", id: "Blogbutton1" %>
       <%= link_to "Sign up", '/signup', class: "btn btn-lg btn-primary",id: "Blogbutton2" %>
       <p id="cau1">Create an account if you havent got one</p>
        </div>
      </div>

  <% end %>
