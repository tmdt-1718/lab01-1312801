<%= form_for Blog.new do |f| %>
<ul>
<% @blog.errors.full_messages.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<p id="form1">
<%= f.label :title %><br />
<%= f.text_field :title %>
</p>
<p id="form2">
<%= f.label :body %><br />
<%= f.text_area :body %>
</p>
<p id="submitform">
<%= f.submit %>
</p>
<% end %>
