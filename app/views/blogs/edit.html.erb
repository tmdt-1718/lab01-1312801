<div class="row">
	<div class="col-9">
		<%= form_with(model: @blog, local: true) do |f|%>
		<div class="form_group">
			<label>Title</label>
			<%= f.text_field :title,class: 'form-control' %>
		</div>
		<div class="form_group">
			<label>Body</label>
			<%= f.text_area :body,class: 'form-control' %>
		</div>
		<button type="submit" class="btn btn-primary"><%= fa_icon "save"%>Save</button>

		<% end %>
		
	</div>

</div> 
