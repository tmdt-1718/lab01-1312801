<% @comments.each do |comment | %>
<div class="card" id="commentShow">
<div class="card-body">
  <span class="name"><%= comment.user.name%></br></span>
  <span class="body"><%= comment.body %></br></span>
  <h6 class="card-subtitle mb-2 text-muted"><%comment.user.name %></h6>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.</br>
  </span>
</div>
</div>
<% end %>
