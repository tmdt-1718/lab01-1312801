<% provide(:title, @user.name) %>
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/home">Home</a></li>
  <li class="breadcrumb-item active"><%=current_user.name%></li>
</ol>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.blogs.any? %>
      <h3>Blogs (<%= @user.blogs.count %>)</h3>
      <ol class="blogs">
        <% @blogs.each do |blog| %>
        <%= render blog %>
        <% end %>
      </ol>
      <%= will_paginate @blogs %>
    <% end %>
  </div>
</div>
